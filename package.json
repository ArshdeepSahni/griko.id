{
  "name": "griko-id",
  "description": "Personal landing page üëãüèª",
  "version": "6.0.0",
  "repository": "https://github.com/grikomsn/griko.id.git",
  "author": "Griko Nibras <git@griko.id>",
  "scripts": {
    "now-build": "yarn build:assets && yarn build:web",
    "build": "env-cmd yarn build:assets && env-cmd yarn build:web",
    "build:assets": "node scripts/build.js",
    "build:web": "next build",
    "clean": "rimraf .next \"public/!(robots.txt|social.png)\"",
    "develop": "next dev",
    "format": "yarn format:index && yarn format:src",
    "format:index": "prettier --write \"*.{js,json,md}\"",
    "format:src": "prettier --write \"src/**/*.{js,ts,tsx}\""
  },
  "dependencies": {
    "@chakra-ui/core": "^0.8.0",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "date-fns": "^2.14.0",
    "emotion-theming": "^10.0.27",
    "favicons": "^6.1.0",
    "framer-motion": "^2.0.1",
    "graphql-request": "^2.0.0",
    "next": "^9.4.4",
    "next-cookies": "^2.0.3",
    "next-seo": "^4.7.3",
    "nprogress": "^0.2.0",
    "prism-react-renderer": "^1.1.1",
    "react": "^16.13.1",
    "react-datocms": "^1.2.5",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "react-markdown": "^4.3.1",
    "rss": "^1.2.2",
    "sitemap": "^6.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.23",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/rss": "^0.0.28",
    "env-cmd": "^10.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": "prettier --write",
    "src/**/*.{js,ts,tsx}": "prettier --write"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "license": "MIT"
}
